  <p> Total: <%= number_to_currency(@product.total) %> </p>
  <p> <img src="<%=@product.image%>" style="height:200px;width:300px"></img><p>
  <p><%= @product.description %><p>
  </p>

  <a class="btn btn-default" href="/products/<%= @product.id %>/edit">Edit</a>

  <br></br>

<%= form_tag "/products/#{@product.id}", method: :delete do %>
<input type="submit" class="btn btn-default" value="Delete product">
<% end %>